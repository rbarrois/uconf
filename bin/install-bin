#!/bin/sh

BIN=confmgr-bin

if [[ $# == 0 ]]; then
    echo "Usage: $0 TARGET
    Installs ${BIN} to TARGET directory";
    exit 1;
else
    TARGET=$1
    if [[ -d ${TARGET} ]]; then
        TARGET=${TARGET}/${BIN}
    fi
    P=$(pwd)/$0
    BINS=$(dirname $P)
    REPO=$(dirname $BINS)
    cp ${BINS}/${BIN} ${TARGET}
    sed -i "s:@@REPO@@:${REPO}:" ${TARGET}
fi
